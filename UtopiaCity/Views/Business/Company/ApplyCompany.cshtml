@model UtopiaCity.ViewModels.Business.Company.ApplyCompanyViewModel

<h1>Apply company</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyCompany">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="CompanyTypeId" class="control-label"></label>
                <select asp-for="CompanyTypeId" class="form-control">
                    @foreach (var companyType in Model.CompanyTypes)
                    {
                        <option value="@companyType.Id">@companyType.ShortTitle</option>
                    }
                </select>
                <span asp-validation-for="CompanyTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyActivityId" class="control-label"></label>
                <select asp-for="CompanyActivityId" class="form-control">
                    @foreach (var companyActivity in Model.CompanyActivities)
                    {
                        <option value="@companyActivity.Id">@companyActivity.Title</option>
                    }
                </select>
                <span asp-validation-for="CompanyActivityId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="FounderId" />
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>